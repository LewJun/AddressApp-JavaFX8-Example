<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.65"
            prefHeight="400.0" prefWidth="600.0"
            fx:controller="com.example.lewjun.address.AddressController">
    <top>
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="Close"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem mnemonicParsing="false" text="Delete"/>
            </Menu>
            <Menu mnemonicParsing="false" text="?">
                <MenuItem mnemonicParsing="false" text="About"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <SplitPane
                dividerPositions="0.3"
                prefHeight="300.0"
                prefWidth="600.0">
            <TableView prefHeight="298.0" prefWidth="175.0" fx:id="personTable">
                <columns>
                    <TableColumn fx:id="firstNameColumn" prefWidth="75.0" text="First Name"/>
                    <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="Last Name"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <BorderPane>
                <padding>
                    <Insets topRightBottomLeft="5"/>
                </padding>
                <top>
                    <Label text="Person Detail" BorderPane.alignment="CENTER"/>
                </top>
                <center>
                    <GridPane>
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                               prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                               prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                                            vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="First Name" GridPane.columnIndex="0"
                               GridPane.rowIndex="0"/>
                        <Label text="Label" GridPane.columnIndex="1"
                               GridPane.rowIndex="0" fx:id="firstNameLabel"/>

                        <Label text="Last Name" GridPane.columnIndex="0"
                               GridPane.rowIndex="1"/>
                        <Label text="Label" GridPane.columnIndex="1"
                               GridPane.rowIndex="1" fx:id="lastNameLabel"/>

                        <Label text="Street" GridPane.columnIndex="0"
                               GridPane.rowIndex="2"/>
                        <Label text="Label" GridPane.columnIndex="1"
                               GridPane.rowIndex="2" fx:id="streetLabel"/>

                        <Label text="City" GridPane.columnIndex="0"
                               GridPane.rowIndex="3"/>
                        <Label text="Label" GridPane.columnIndex="1"
                               GridPane.rowIndex="3" fx:id="cityLabel"/>

                        <Label text="Postal Code" GridPane.columnIndex="0"
                               GridPane.rowIndex="4"/>
                        <Label text="Label" GridPane.columnIndex="1"
                               GridPane.rowIndex="4" fx:id="postalCodeLabel"/>

                        <Label text="Birthday" GridPane.columnIndex="0"
                               GridPane.rowIndex="5"/>
                        <Label text="Label" GridPane.columnIndex="1"
                               GridPane.rowIndex="5" fx:id="birthdayLabel"/>
                    </GridPane>
                </center>

                <bottom>
                    <ButtonBar>
                        <buttons>
                            <Button mnemonicParsing="false" text="New..." fx:id="btnNewPerson"/>
                            <Button mnemonicParsing="false" text="Edit..."/>
                            <Button mnemonicParsing="false" text="Delete" fx:id="btnDelPerson"/>
                        </buttons>
                    </ButtonBar>
                </bottom>

            </BorderPane>
        </SplitPane>
    </center>
</BorderPane>
