<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.112"
            fx:controller="com.example.lewjun.address.AddressController">
    <top>
        <MenuBar>
            <Menu mnemonicParsing="false" text="File">
                <MenuItem mnemonicParsing="false" text="Close"/>
            </Menu>
            <Menu mnemonicParsing="false" text="Edit">
                <MenuItem mnemonicParsing="false" text="Delete"/>
            </Menu>
            <Menu mnemonicParsing="false" text="?">
                <MenuItem mnemonicParsing="false" text="About"/>
            </Menu>
        </MenuBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.3" prefHeight="300.0" prefWidth="600.0">
            <TableView fx:id="personTable" prefHeight="298.0" prefWidth="175.0">
                <columns>
                    <TableColumn fx:id="firstNameColumn" prefWidth="75.0" text="First Name"/>
                    <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="Last Name"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
            <BorderPane>
                <padding>
                    <Insets topRightBottomLeft="5"/>
                </padding>
                <top>
                    <Label text="Person Detail" BorderPane.alignment="CENTER"/>
                </top>
                <center>
                    <GridPane>
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        </rowConstraints>
                        <Label text="First Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label fx:id="firstNameLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                        <Label text="Last Name" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label fx:id="lastNameLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <Label text="Street" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label fx:id="streetLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                        <Label text="City" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <Label fx:id="cityLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                        <Label text="Postal Code" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <Label fx:id="postalCodeLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                        <Label text="Birthday" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                        <Label fx:id="birthdayLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                        <Label text="Sex" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                        <Label fx:id="sexLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                    </GridPane>
                </center>

                <bottom>
                    <ButtonBar>
                        <buttons>
                            <Button fx:id="btnNewPerson" mnemonicParsing="false" text="New..."/>
                            <Button fx:id="btnEditPerson" mnemonicParsing="false" text="Edit..."/>
                            <Button fx:id="btnDelPerson" mnemonicParsing="false" text="Delete"/>
                        </buttons>
                    </ButtonBar>
                </bottom>

            </BorderPane>
        </SplitPane>
    </center>
</BorderPane>
