<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/8.0.65"
            prefHeight="300.0" prefWidth="500.0"
            fx:controller="com.example.lewjun.person.edit.PersonEditDialogController">
    <padding>
        <Insets topRightBottomLeft="5"/>
    </padding>
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="80.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                   prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="First Name" GridPane.columnIndex="0"
                   GridPane.rowIndex="0"/>
            <TextField GridPane.columnIndex="1"
                       GridPane.rowIndex="0" fx:id="firstNameField"/>

            <Label text="Last Name" GridPane.columnIndex="0"
                   GridPane.rowIndex="1"/>
            <TextField GridPane.columnIndex="1"
                       GridPane.rowIndex="1" fx:id="lastNameField"/>

            <Label text="Street" GridPane.columnIndex="0"
                   GridPane.rowIndex="2"/>
            <TextField GridPane.columnIndex="1"
                       GridPane.rowIndex="2" fx:id="streetField"/>

            <Label text="City" GridPane.columnIndex="0"
                   GridPane.rowIndex="3"/>
            <TextField GridPane.columnIndex="1"
                       GridPane.rowIndex="3" fx:id="cityField"/>

            <Label text="Postal Code" GridPane.columnIndex="0"
                   GridPane.rowIndex="4"/>
            <TextField GridPane.columnIndex="1"
                       GridPane.rowIndex="4" fx:id="postalCodeField"/>

            <Label text="Birthday" GridPane.columnIndex="0"
                   GridPane.rowIndex="5"/>
            <TextField GridPane.columnIndex="1"
                       GridPane.rowIndex="5" fx:id="birthdayField"/>

            <fx:define>
                <ToggleGroup fx:id="sexGroup"/>
            </fx:define>

            <Label text="Sex" GridPane.columnIndex="0"
                   GridPane.rowIndex="6"/>

            <HBox GridPane.columnIndex="1" GridPane.rowIndex="6" spacing="10">
                <RadioButton toggleGroup="$sexGroup" text="Male" fx:id="maleRadio" selected="true"/>
                <RadioButton toggleGroup="$sexGroup" text="Female" fx:id="femaleRadio"/>
            </HBox>

        </GridPane>
    </center>

    <bottom>
        <ButtonBar>
            <buttons>
                <Button mnemonicParsing="false" text="OK" fx:id="btnOk"/>
                <Button mnemonicParsing="false" text="Cancel" fx:id="btnCancel"/>
            </buttons>
        </ButtonBar>
    </bottom>
</BorderPane>